<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark">

    <!-- â”€â”€ Header â”€â”€ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            android:textColor="@color/muted"
            android:textSize="15sp"
            android:paddingEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radar Map ðŸ“¡"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Scanningâ€¦"
                android:textColor="@color/muted"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView android:id="@+id/tvPeopleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 detected"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ locatingâ€¦"
                android:textColor="@color/muted"
                android:textSize="10sp"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </LinearLayout>

    <!-- â”€â”€ Radar View â”€â”€ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="6dp">

        <com.safeher.app.RadarView
            android:id="@+id/radarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- â”€â”€ Bottom panel â”€â”€ -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/card_dark"
        app:cardCornerRadius="22dp"
        app:strokeColor="@color/border"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact + live share status row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView android:id="@+id/tvContactStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘¥ No contacts yet"
                    android:textColor="@color/muted"
                    android:textSize="11sp"/>

                <TextView android:id="@+id/tvLiveShareStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš« Live sharing OFF"
                    android:textColor="@color/muted"
                    android:textSize="11sp"/>
            </LinearLayout>

            <!-- Legend -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ You   ðŸ”´ Contact   ðŸ”µ BT Device   ðŸŸ£ SafeHer"
                android:textColor="@color/muted"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="14dp"/>

            <!-- Row 1: SMS + WhatsApp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- SMS button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSms"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="ðŸ“±  Send SMS"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:backgroundTint="@color/card_dark"
                    app:strokeColor="@color/green"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"
                    app:icon="@null"/>

                <!-- WhatsApp button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="ðŸ’¬  WhatsApp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:backgroundTint="@color/card_dark"
                    app:strokeColor="#25D366"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"/>
            </LinearLayout>

            <!-- Row 2: Live Share + SOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Live Share toggle -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleLiveShare"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="ðŸ“¡  Live Share"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:backgroundTint="@color/card_dark"
                    app:strokeColor="@color/purple"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp"/>

                <!-- SOS Alert -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSosAlert"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="ðŸ†˜  SOS Alert"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="14dp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
